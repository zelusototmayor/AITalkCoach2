<% content_for :title, "Welcome - AI Talk Coach" %>

<div class="onboarding-container">
  <div class="onboarding-content">
    <!-- Quit Button - Top Right -->
    <%= link_to logout_path, class: 'quit-btn-top-right', data: { turbo: false, turbo_confirm: "Are you sure you want to quit? You'll need to start over." } do %>
      <span class="quit-icon">×</span>
    <% end %>

    <!-- Back Button - Top Left (hidden on first screen) -->
    <%= render 'onboarding/back_button', back_path: nil %>

    <!-- Welcome Content -->
    <div class="welcome-section">
      <div class="welcome-hero">
        <h1 class="hero-title">
          Master the <span class="hero-highlight">#1 Skill</span> That Opens Every Door
        </h1>
        <p class="hero-subtitle">
          According to LinkedIn, communication is the most in-demand skill across industries.
        </p>
      </div>

      <!-- Stat Cards - 4 Cards -->
      <div class="stat-cards">
        <div class="stat-card">
          <div class="stat-icon-container" aria-hidden="true">
            <%= image_tag 'icons/career-success.png', alt: 'Career Success', class: 'stat-icon-img' %>
          </div>
          <div class="stat-number">85%</div>
          <div class="stat-label">of career success comes from strong communication skills</div>
          <div class="stat-source">Harvard Business Review</div>
        </div>

        <div class="stat-card">
          <div class="stat-icon-container" aria-hidden="true">
            <%= image_tag 'icons/higher-earnings.png', alt: 'Higher Earnings', class: 'stat-icon-img' %>
          </div>
          <div class="stat-number">40%</div>
          <div class="stat-label">higher earnings for those with excellent communication</div>
          <div class="stat-source">National Association of Colleges</div>
        </div>

        <div class="stat-card">
          <div class="stat-icon-container" aria-hidden="true">
            <%= image_tag 'icons/job-posting.png', alt: 'Job Postings', class: 'stat-icon-img' %>
          </div>
          <div class="stat-number">1.9M</div>
          <div class="stat-label">job postings requiring strong communication skills</div>
          <div class="stat-source">LinkedIn, 2023</div>
        </div>

        <div class="stat-card">
          <div class="stat-icon-container" aria-hidden="true">
            <%= image_tag 'icons/relationship.png', alt: 'Relationships', class: 'stat-icon-img' %>
          </div>
          <div class="stat-number">Predicts</div>
          <div class="stat-label">relationship happiness - stronger connections & satisfaction</div>
          <div class="stat-source">BioMed Central</div>
        </div>
      </div>

      <!-- CTA -->
      <div class="welcome-cta">
        <%= link_to onboarding_profile_path, class: "primary-btn btn-large" do %>
          Continue
          <span aria-hidden="true">→</span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  /* Remove default container padding */
  .onboarding-container {
    min-height: 100vh;
    position: relative;
  }

  .onboarding-content {
    min-height: 100vh;
    padding: 0;
  }

  /* Quit Button - Top Right Corner */
  .quit-btn-top-right {
    position: fixed;
    top: 1rem;
    right: 1rem;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f1f5f9;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s ease;
    z-index: 100;
  }

  .quit-btn-top-right:hover {
    background-color: #e2e8f0;
  }

  .quit-btn-top-right .quit-icon {
    font-size: 20px;
    color: #64748b;
    line-height: 1;
  }

  /* Compact Welcome Section */
  .welcome-section {
    max-width: 900px;
    margin: 0 auto;
    padding: 4rem 1.5rem 6rem 1.5rem; /* Reduced top padding, extra bottom for floating button */
  }

  .welcome-hero {
    text-align: center;
    margin-bottom: 2rem;
  }

  .hero-title {
    font-size: 2.25rem;
    font-weight: 700;
    color: #1e293b;
    line-height: 1.3;
    margin-bottom: 1rem;
  }

  .hero-highlight {
    color: #FF8C42;
  }

  .hero-subtitle {
    font-size: 0.95rem;
    color: #64748b;
    line-height: 1.5;
    margin: 0 auto;
    max-width: 600px;
    text-align: center;
  }

  /* Stat Cards - 2x2 Grid */
  .stat-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .stat-card {
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 1.25rem;
    text-align: center;
    transition: all 0.2s ease;
  }

  .stat-card:hover {
    border-color: #FF8C42;
    box-shadow: 0 4px 12px rgba(255, 140, 66, 0.15);
    transform: translateY(-2px);
  }

  .stat-icon-container {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 0.5rem auto;
  }

  .stat-icon-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .stat-number {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.875rem;
    color: #1e293b;
    line-height: 1.4;
    margin-bottom: 0.5rem;
  }

  .stat-source {
    font-size: 0.75rem;
    color: #64748b;
    font-style: italic;
  }

  /* CTA - Floating Button */
  .welcome-cta {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.5rem;
    background: transparent;
    display: flex;
    justify-content: center;
    z-index: 50;
    pointer-events: none;
  }

  .primary-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #FF8C42 0%, #FF7028 100%);
    color: white;
    padding: 0.875rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 12px rgba(255, 140, 66, 0.3);
    pointer-events: auto;
  }

  .primary-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(255, 140, 66, 0.4);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .stat-cards {
      grid-template-columns: 1fr;
    }

    .hero-title {
      font-size: 1.75rem;
    }

    .welcome-cta {
      padding: 1rem;
    }
  }
</style>
