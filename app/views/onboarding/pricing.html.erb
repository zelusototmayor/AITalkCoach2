<% content_for :title, "Choose Your Plan - AI Talk Coach" %>

<% content_for :head do %>
  <script src="https://js.stripe.com/v3/"></script>
  <meta name="stripe-publishable-key" content="<%= Rails.configuration.stripe[:publishable_key] %>">
<% end %>

<div class="paywall-container" data-controller="onboarding-payment" data-onboarding-payment-setup-intent-value="<%= @setup_intent.client_secret %>">
  <!-- Quit Button - Top Right -->
  <%= link_to logout_path, class: 'quit-btn-top-right', data: { turbo: false, turbo_confirm: "Are you sure you want to quit? You'll need to start over." } do %>
    <span class="quit-icon">×</span>
  <% end %>

  <!-- Back Button - Top Left -->
  <%= render 'onboarding/back_button', back_path: onboarding_cinematic_path %>

  <!-- Left Panel: Branding & Testimonial -->
  <div class="left-panel">
    <div class="left-panel-content">
      <div class="premium-badge">
        <svg class="badge-icon" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        Premium Access
      </div>

      <h1 class="hero-title">
        Master Your<br>
        <span class="hero-title-accent">Communication</span>
      </h1>

      <p class="hero-subtitle">
        Practice daily and improve your speech clarity and confidence.
      </p>

      <!-- Testimonial Card -->
      <div class="testimonial-card">
        <div class="testimonial-stars">
          <svg viewBox="0 0 24 24" fill="#FFB800" width="18" height="18"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
          <svg viewBox="0 0 24 24" fill="#FFB800" width="18" height="18"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
          <svg viewBox="0 0 24 24" fill="#FFB800" width="18" height="18"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
          <svg viewBox="0 0 24 24" fill="#FFB800" width="18" height="18"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
          <svg viewBox="0 0 24 24" fill="#FFB800" width="18" height="18"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
        </div>
        <p class="testimonial-text">
          "The real-time feedback is invaluable. I love the specific recommendations on how to improve. This is a definite game-changer!"
        </p>
        <div class="testimonial-author">
          <div class="author-info">
            <div class="author-name">Cassan T.</div>
            <div class="author-title">Public Speaking Student</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Panel: Pricing & Features -->
  <div class="right-panel">
    <div class="right-panel-content">
      <h2 class="pricing-title">Choose your plan</h2>
      <p class="pricing-subtitle">Unlock full access to AI coaching tools.</p>

      <!-- Plan Selection Cards -->
      <div class="plan-cards">
        <!-- Monthly Plan -->
        <label class="plan-card">
          <input type="radio" name="selected_plan" value="monthly" class="plan-radio" data-onboarding-payment-target="planRadio" data-action="change->onboarding-payment#selectPlan">
          <div class="radio-indicator"></div>
          <div class="plan-card-content">
            <div class="plan-name">Monthly</div>
            <div class="plan-price">
              <span class="price-amount">€9.99</span>
              <span class="price-period">/mo</span>
            </div>
            <div class="plan-description">Flexible, cancel anytime</div>
          </div>
        </label>

        <!-- Yearly Plan (Recommended) -->
        <label class="plan-card recommended">
          <input type="radio" name="selected_plan" value="yearly" class="plan-radio" data-onboarding-payment-target="planRadio" data-action="change->onboarding-payment#selectPlan" checked>
          <div class="best-value-badge">BEST VALUE</div>
          <div class="radio-indicator"></div>
          <div class="plan-card-content">
            <div class="plan-name">Yearly</div>
            <div class="plan-price">
              <span class="price-amount">€5.00</span>
              <span class="price-period">/mo</span>
            </div>
            <div class="plan-savings">SAVE 50%</div>
            <div class="plan-description">Billed as €60/year</div>
            <div class="plan-daily-cost">Just €0.16 / day</div>
          </div>
        </label>
      </div>

      <!-- What's Included Section -->
      <div class="features-section">
        <h3 class="features-title">WHAT'S INCLUDED</h3>

        <div class="feature-item">
          <div class="feature-icon-container">
            <%= image_tag 'icons/clarity.png', alt: 'Unlimited Analysis', class: 'feature-icon-img' %>
          </div>
          <div class="feature-content">
            <div class="feature-name">Unlimited Analysis</div>
            <div class="feature-description">Practice as much as you need with real-time feedback.</div>
          </div>
        </div>

        <div class="feature-item">
          <div class="feature-icon-container">
            <%= image_tag 'icons/advanced-metrics.png', alt: 'Advanced Analytics', class: 'feature-icon-img' %>
          </div>
          <div class="feature-content">
            <div class="feature-name">Advanced Analytics</div>
            <div class="feature-description">Track your pace, filler words, and clarity over time.</div>
          </div>
        </div>

        <div class="feature-item">
          <div class="feature-icon-container">
            <%= image_tag 'icons/ai-coach.png', alt: 'AI Coaching Insights', class: 'feature-icon-img' %>
          </div>
          <div class="feature-content">
            <div class="feature-name">AI Coaching Insights</div>
            <div class="feature-description">Get personalized tips to improve your specific weak points.</div>
          </div>
        </div>

        <div class="feature-item">
          <div class="feature-icon-container">
            <%= image_tag 'icons/custom-plan.png', alt: 'Structured Curriculum', class: 'feature-icon-img' %>
          </div>
          <div class="feature-content">
            <div class="feature-name">Structured Curriculum</div>
            <div class="feature-description">Follow a proven path to communication mastery.</div>
          </div>
        </div>
      </div>

      <!-- Payment Method Section -->
      <div class="payment-section">
        <div class="payment-header">Payment Method</div>

        <!-- Stripe Card Element -->
        <div id="stripe-card-element" class="stripe-card-element"></div>
        <div id="card-errors" class="card-errors"></div>
      </div>

      <% if flash[:alert] %>
        <div class="form-error">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <!-- Money Back Guarantee -->
      <div class="guarantee-badge">
        <svg class="guarantee-icon" viewBox="0 0 24 24" fill="currentColor" width="16" height="16">
          <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
        </svg>
        7-day money-back guarantee. No questions asked.
      </div>

      <!-- Terms -->
      <p class="terms-text">
        By subscribing, you agree to our
        <a href="/terms" target="_blank">Terms of Service</a> and
        <a href="/privacy" target="_blank">Privacy Policy</a>.
        Subscription auto-renews unless canceled at least 24 hours before end of period.
      </p>
    </div>
  </div>

  <!-- Floating CTA Button -->
  <div class="floating-button-container">
    <button type="button"
            class="primary-btn btn-large"
            data-onboarding-payment-target="submitBtn"
            data-action="click->onboarding-payment#submitPayment">
      <span data-onboarding-payment-target="submitText">Start 3-Day Free Trial</span>
      <span data-onboarding-payment-target="submitLoader" class="btn-loader" style="display: none;"></span>
    </button>
    <p class="continue-note">Then €60.00 billed annually</p>

    <!-- Progress Dots -->
    <div class="progress-dots">
      <div class="progress-dot"></div>
      <div class="progress-dot"></div>
      <div class="progress-dot"></div>
      <div class="progress-dot"></div>
      <div class="progress-dot"></div>
      <div class="progress-dot"></div>
      <div class="progress-dot"></div>
      <div class="progress-dot"></div>
      <div class="progress-dot"></div>
      <div class="progress-dot active"></div>
    </div>
  </div>
</div>

<style>
  /* Container */
  .paywall-container {
    height: 100vh;
    max-height: 100vh;
    display: grid;
    grid-template-columns: 45% 55%;
    position: relative;
    background-color: #ffffff;
    overflow: hidden;
  }

  /* Quit Button */
  .quit-btn-top-right {
    position: fixed;
    top: 1.5rem;
    right: 1.5rem;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s ease;
    z-index: 100;
  }

  .quit-btn-top-right:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }

  .quit-btn-top-right .quit-icon {
    font-size: 20px;
    color: #ffffff;
    line-height: 1;
  }

  /* Left Panel - Dark Background */
  .left-panel {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    color: #ffffff;
    padding: 2rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .left-panel-content {
    max-width: 450px;
  }

  .premium-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 140, 66, 0.15);
    border: 1px solid rgba(255, 140, 66, 0.3);
    border-radius: 20px;
    padding: 0.4rem 0.875rem;
    font-size: 0.8125rem;
    font-weight: 600;
    color: #FF8C42;
    margin-bottom: 1.5rem;
  }

  .badge-icon {
    width: 16px;
    height: 16px;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1rem;
    color: #ffffff;
  }

  .hero-title-accent {
    color: #FF8C42;
  }

  .hero-subtitle {
    font-size: 1rem;
    line-height: 1.5;
    color: #cbd5e1;
    margin-bottom: 2rem;
  }

  /* Testimonial Card */
  .testimonial-card {
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.25rem;
    backdrop-filter: blur(10px);
  }

  .testimonial-stars {
    display: flex;
    gap: 2px;
    margin-bottom: 0.75rem;
  }

  .testimonial-text {
    font-size: 0.9375rem;
    line-height: 1.5;
    color: #ffffff;
    font-style: italic;
    margin-bottom: 1rem;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .author-info {
    flex: 1;
  }

  .author-name {
    font-size: 0.875rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 0.25rem;
  }

  .author-title {
    font-size: 0.8125rem;
    color: #94a3b8;
  }

  /* Right Panel - White Background */
  .right-panel {
    background: #F8FAFC;
    padding: 2rem 2rem 6rem 2rem;
    overflow-y: auto;
  }

  .right-panel-content {
    max-width: 520px;
    margin: 0 auto;
  }

  .pricing-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.375rem;
  }

  .pricing-subtitle {
    font-size: 0.9375rem;
    color: #64748b;
    margin-bottom: 1.5rem;
  }

  /* Plan Cards */
  .plan-cards {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.875rem;
    margin-bottom: 1.5rem;
  }

  .plan-card {
    position: relative;
    background: #ffffff;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    padding: 1.125rem;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: flex-start;
    gap: 0.625rem;
  }

  .plan-card:hover {
    border-color: #FF8C42;
    box-shadow: 0 4px 12px rgba(255, 140, 66, 0.1);
  }

  .plan-card.recommended {
    border-color: #FF8C42;
  }

  .plan-radio {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .radio-indicator {
    width: 20px;
    height: 20px;
    border: 2px solid #cbd5e1;
    border-radius: 50%;
    flex-shrink: 0;
    margin-top: 0.25rem;
    position: relative;
    transition: all 0.2s ease;
  }

  .plan-card:has(.plan-radio:checked) {
    border-color: #FF8C42;
    background: linear-gradient(135deg, #FFF9F5 0%, #ffffff 100%);
  }

  .plan-card:has(.plan-radio:checked) .radio-indicator {
    border-color: #FF8C42;
    background: #FF8C42;
  }

  .plan-card:has(.plan-radio:checked) .radio-indicator::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #ffffff;
  }

  .best-value-badge {
    position: absolute;
    top: -12px;
    right: 1rem;
    background: linear-gradient(135deg, #FF8C42 0%, #FF7028 100%);
    color: white;
    font-size: 0.6875rem;
    font-weight: 700;
    padding: 0.375rem 0.75rem;
    border-radius: 20px;
    letter-spacing: 0.05em;
  }

  .plan-card-content {
    flex: 1;
  }

  .plan-name {
    font-size: 1rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.375rem;
  }

  .plan-price {
    margin-bottom: 0.25rem;
  }

  .price-amount {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1e293b;
    line-height: 1;
  }

  .price-period {
    font-size: 0.9375rem;
    font-weight: 600;
    color: #64748b;
  }

  .plan-savings {
    display: inline-block;
    background: #dcfce7;
    color: #15803d;
    font-size: 0.6875rem;
    font-weight: 700;
    padding: 0.1875rem 0.4375rem;
    border-radius: 4px;
    margin-bottom: 0.375rem;
  }

  .plan-description {
    font-size: 0.8125rem;
    color: #64748b;
    margin-bottom: 0.1875rem;
  }

  .plan-daily-cost {
    font-size: 0.8125rem;
    color: #FF8C42;
    font-weight: 600;
  }

  /* Features Section */
  .features-section {
    margin-bottom: 1.5rem;
  }

  .features-title {
    font-size: 0.75rem;
    font-weight: 700;
    color: #64748b;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .feature-item:last-child {
    margin-bottom: 0;
  }

  .feature-icon-container {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #FFF9F5 0%, #FFE8D9 100%);
    border-radius: 8px;
  }

  .feature-icon-img {
    width: 22px;
    height: 22px;
    object-fit: contain;
  }

  .feature-content {
    flex: 1;
  }

  .feature-name {
    font-size: 0.875rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 0.1875rem;
  }

  .feature-description {
    font-size: 0.8125rem;
    color: #64748b;
    line-height: 1.4;
  }

  /* Payment Section */
  .payment-section {
    margin-bottom: 1.25rem;
  }

  .payment-header {
    font-size: 0.875rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 0.625rem;
  }

  .stripe-card-element {
    background: #ffffff;
    border: 2px solid #e2e8f0;
    border-radius: 10px;
    padding: 0.875rem;
    transition: all 0.2s ease;
  }

  .stripe-card-element:focus-within {
    border-color: #FF8C42;
    box-shadow: 0 0 0 3px rgba(255, 140, 66, 0.1);
  }

  .card-errors {
    color: #dc2626;
    font-size: 0.8125rem;
    margin-top: 0.375rem;
  }

  /* Form Error */
  .form-error {
    background-color: #fee;
    border: 1px solid #fcc;
    border-radius: 8px;
    padding: 0.875rem;
    margin-bottom: 1rem;
    color: #c33;
    text-align: center;
    font-size: 0.8125rem;
  }

  /* Guarantee Badge */
  .guarantee-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
    font-size: 0.8125rem;
    color: #64748b;
    margin-bottom: 1.25rem;
  }

  .guarantee-icon {
    color: #10b981;
  }

  /* Terms Text */
  .terms-text {
    font-size: 0.6875rem;
    color: #94a3b8;
    text-align: center;
    line-height: 1.4;
    margin: 0;
  }

  .terms-text a {
    color: #64748b;
    text-decoration: underline;
  }

  .terms-text a:hover {
    color: #FF8C42;
  }

  /* Floating Button Container */
  .floating-button-container {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.25rem 1.5rem;
    background: transparent;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    z-index: 50;
    pointer-events: none;
  }

  .primary-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #FF8C42 0%, #FF7028 100%);
    color: white;
    padding: 0.875rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 12px rgba(255, 140, 66, 0.3);
    pointer-events: auto;
  }

  .primary-btn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(255, 140, 66, 0.4);
  }

  .primary-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .btn-loader {
    display: inline-block;
    width: 16px;
    height: 16px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .continue-note {
    font-size: 0.8125rem;
    color: #64748b;
    text-align: center;
    margin: 0;
  }

  /* Progress Dots */
  .progress-dots {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
  }

  .progress-dot {
    width: 8px;
    height: 8px;
    border-radius: 4px;
    background-color: #cbd5e1;
    transition: all 0.3s ease;
  }

  .progress-dot.active {
    width: 24px;
    background-color: #FF8C42;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .paywall-container {
      grid-template-columns: 1fr;
      height: auto;
      max-height: none;
    }

    .left-panel {
      padding: 1.75rem 1.5rem;
      min-height: auto;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 0.9375rem;
      margin-bottom: 1.5rem;
    }

    .testimonial-card {
      padding: 1rem;
    }

    .right-panel {
      padding: 1.5rem 1.5rem 6rem 1.5rem;
    }
  }

  @media (max-width: 640px) {
    .plan-cards {
      grid-template-columns: 1fr;
    }

    .hero-title {
      font-size: 1.75rem;
    }

    .left-panel {
      padding: 1.5rem;
    }

    .right-panel {
      padding: 1.25rem 1.25rem 5.5rem 1.25rem;
    }

    .price-amount {
      font-size: 1.5rem;
    }

    .floating-button-container {
      padding: 1rem;
    }
  }
</style>
