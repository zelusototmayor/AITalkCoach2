<% content_for :title, "How You Will Improve - AI Talk Coach" %>

<div class="onboarding-container">
  <div class="onboarding-content">
    <!-- Quit Button - Top Right -->
    <%= link_to logout_path, class: 'quit-btn-top-right', data: { turbo: false, turbo_confirm: "Are you sure you want to quit? You'll need to start over." } do %>
      <span class="quit-icon">Ã—</span>
    <% end %>

    <!-- Back Button - Top Left -->
    <%= render 'onboarding/back_button', back_path: onboarding_overall_score_path %>

    <!-- Coach Intro Section -->
    <div class="coach-intro-section">
      <h1 class="section-title">How You Will Improve</h1>
      <p class="section-subtitle">Your personalized AI coach guides you every step of the way</p>

      <!-- Feature Cards -->
      <div class="features-list">
        <!-- Session Recommendations Feature -->
        <div class="feature-card-full">
          <div class="feature-header-row">
            <div class="feature-icon-container-small">
              <%= image_tag 'icons/session-recommendation.png', alt: 'Session Recommendations', class: 'feature-icon-small' %>
            </div>
            <div class="feature-header-text">
              <h3 class="feature-title-inline">Session Recommendations</h3>
              <p class="feature-description-inline">After each practice session, get personalized insights based on your rolling 5-session average</p>
            </div>
          </div>
          <div class="feature-preview-full">
            <div class="recommendation-card-title">Reduce Filler Words</div>
            <div class="metric-comparison-row">
              <div class="metric-comparison-item">
                <div class="metric-comparison-label">5-Session Avg</div>
                <div class="metric-comparison-value">8.2%</div>
              </div>
              <div class="metric-arrow">â†’</div>
              <div class="metric-comparison-item">
                <div class="metric-comparison-label">Goal</div>
                <div class="metric-comparison-value goal-value">3.0%</div>
              </div>
            </div>
            <div class="recommendation-description">
              You use "um" and "like" frequently. Let's reduce these.
            </div>
          </div>
        </div>

        <!-- Weekly Goal Feature -->
        <div class="feature-card-full">
          <div class="feature-header-row">
            <div class="feature-icon-container-small">
              <%= image_tag 'icons/weekly-goal.png', alt: 'Weekly Goal', class: 'feature-icon-small' %>
            </div>
            <div class="feature-header-text">
              <h3 class="feature-title-inline">Weekly Goal</h3>
              <p class="feature-description-inline">Stay focused on one key area each week with daily and weekly session targets</p>
            </div>
          </div>
          <div class="feature-preview-full">
            <div class="weekly-goal-title">Reduce Filler Words</div>
            <div class="weekly-goal-tip">Pause briefly instead of saying "um" or "like"</div>
            <div class="weekly-progress-row">
              <div class="weekly-progress-item">
                <div class="weekly-progress-label">Today</div>
                <div class="weekly-progress-value">2/3 sessions</div>
              </div>
              <div class="weekly-progress-item">
                <div class="weekly-progress-label">Week</div>
                <div class="weekly-progress-value">8/15 sessions</div>
              </div>
            </div>
            <div class="weekly-streak-badge">
              <span class="streak-text">ðŸ”¥ 4 day streak</span>
            </div>
          </div>
        </div>

        <!-- Today's Focus Feature -->
        <div class="feature-card-full">
          <div class="feature-header-row">
            <div class="feature-icon-container-small">
              <%= image_tag 'icons/todays-focus.png', alt: 'Today\'s Focus', class: 'feature-icon-small' %>
            </div>
            <div class="feature-header-text">
              <h3 class="feature-title-inline">Today's Focus</h3>
              <p class="feature-description-inline">Get personalized daily drills tailored to your specific needs and progress</p>
            </div>
          </div>
          <div class="feature-preview-full">
            <div class="drill-header-row">
              <div class="drill-order-badge">1</div>
              <div class="drill-duration-badge">60s</div>
            </div>
            <div class="drill-title-main">Pause Practice</div>
            <div class="drill-description-main">Practice using intentional pauses instead of filler words. Read a passage aloud, focusing on brief pauses.</div>
            <div class="drill-reason">Based on your filler word usage</div>
          </div>
        </div>
      </div>

      <div class="closing-message">
        <p class="closing-text">Personalized guidance every day</p>
      </div>
    </div>

    <!-- Floating Continue Button -->
    <div class="floating-button-container">
      <%= link_to onboarding_progress_intro_path, class: 'primary-btn btn-large' do %>
        Continue
        <span aria-hidden="true">â†’</span>
      <% end %>

      <!-- Progress Dots -->
      <div class="progress-dots">
        <div class="progress-dot"></div>
        <div class="progress-dot"></div>
        <div class="progress-dot"></div>
        <div class="progress-dot"></div>
        <div class="progress-dot active"></div>
        <div class="progress-dot"></div>
        <div class="progress-dot"></div>
        <div class="progress-dot"></div>
        <div class="progress-dot"></div>
        <div class="progress-dot"></div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Container */
  .onboarding-container {
    min-height: 100vh;
    position: relative;
    background-color: #F8FAFC;
  }

  .onboarding-content {
    min-height: 100vh;
    padding: 0;
  }

  /* Quit Button - Top Right Corner */
  .quit-btn-top-right {
    position: fixed;
    top: 1rem;
    right: 1rem;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f1f5f9;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s ease;
    z-index: 100;
  }

  .quit-btn-top-right:hover {
    background-color: #e2e8f0;
  }

  .quit-btn-top-right .quit-icon {
    font-size: 20px;
    color: #64748b;
    line-height: 1;
  }

  /* Coach Intro Section */
  .coach-intro-section {
    max-width: 1100px;
    margin: 0 auto;
    padding: 3rem 1.5rem 7rem 1.5rem;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1e293b;
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .section-subtitle {
    font-size: 0.95rem;
    color: #64748b;
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .closing-text {
    font-size: 1rem;
    color: #64748b;
    text-align: center;
    margin-top: 2rem;
    font-style: italic;
  }

  /* Features List */
  .features-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .feature-card-full {
    background: #ffffff;
    border: 2px solid #e5e7eb;
    border-radius: 16px;
    padding: 1.5rem;
    transition: all 0.2s ease;
  }

  .feature-card-full:hover {
    border-color: #FF8C42;
    box-shadow: 0 4px 12px rgba(255, 140, 66, 0.15);
    transform: translateY(-2px);
  }

  .feature-header-row {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .feature-icon-container-small {
    width: 48px;
    height: 48px;
    min-width: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #FFF4ED;
    border-radius: 24px;
  }

  .feature-icon-small {
    width: 36px;
    height: 36px;
    object-fit: contain;
  }

  .feature-header-text {
    flex: 1;
  }

  .feature-title-inline {
    font-size: 1.05rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0 0 0.25rem 0;
    line-height: 1.3;
  }

  .feature-description-inline {
    font-size: 0.875rem;
    color: #64748b;
    margin: 0;
    line-height: 1.4;
  }

  /* Preview Cards */
  .feature-preview-full {
    background: #F8FAFC;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 1rem;
  }

  /* Session Recommendation Styles */
  .recommendation-card-title {
    font-size: 1rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.75rem;
  }

  .metric-comparison-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
    padding: 0.5rem 0;
  }

  .metric-comparison-item {
    flex: 1;
  }

  .metric-comparison-label {
    font-size: 0.6875rem;
    font-weight: 500;
    color: #94a3b8;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.25rem;
  }

  .metric-comparison-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1e293b;
  }

  .goal-value {
    color: #FF8C42;
  }

  .metric-arrow {
    font-size: 1.25rem;
    color: #94a3b8;
    padding: 0 1rem;
  }

  .recommendation-description {
    font-size: 0.8125rem;
    color: #64748b;
    line-height: 1.5;
  }

  /* Weekly Goal Styles */
  .weekly-goal-title {
    font-size: 1rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.5rem;
  }

  .weekly-goal-tip {
    font-size: 0.8125rem;
    color: #64748b;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .weekly-progress-row {
    display: flex;
    justify-content: space-around;
    margin-bottom: 0.75rem;
  }

  .weekly-progress-item {
    text-align: center;
  }

  .weekly-progress-label {
    font-size: 0.75rem;
    font-weight: 500;
    color: #94a3b8;
    margin-bottom: 0.25rem;
  }

  .weekly-progress-value {
    font-size: 0.9375rem;
    font-weight: 700;
    color: #1e293b;
  }

  .weekly-streak-badge {
    background: #FFF4ED;
    border-radius: 8px;
    padding: 0.5rem 0.75rem;
    text-align: center;
  }

  .streak-text {
    font-size: 0.8125rem;
    font-weight: 600;
    color: #FF8C42;
  }

  /* Daily Drill Styles */
  .drill-header-row {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .drill-order-badge {
    background: #FF8C42;
    width: 24px;
    height: 24px;
    min-width: 24px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.8125rem;
    font-weight: 700;
    color: #ffffff;
  }

  .drill-duration-badge {
    background: #F8FAFC;
    border: 1px solid #e5e7eb;
    border-radius: 6px;
    padding: 0.125rem 0.5rem;
    font-size: 0.6875rem;
    font-weight: 600;
    color: #64748b;
    display: flex;
    align-items: center;
  }

  .drill-title-main {
    font-size: 1rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .drill-description-main {
    font-size: 0.8125rem;
    color: #64748b;
    margin-bottom: 0.75rem;
    line-height: 1.5;
  }

  .drill-reason {
    font-size: 0.75rem;
    font-weight: 500;
    color: #FF8C42;
    font-style: italic;
    line-height: 1.3;
  }

  /* Closing Message */
  .closing-message {
    background: #FFF4ED;
    border: 1px solid #FFD4B8;
    border-radius: 12px;
    padding: 1.25rem;
  }

  /* Floating Button Container with Progress Dots */
  .floating-button-container {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.25rem 1.5rem;
    background: transparent;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    z-index: 50;
    pointer-events: none;
  }

  /* Progress Dots */
  .progress-dots {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
  }

  .progress-dot {
    width: 8px;
    height: 8px;
    border-radius: 4px;
    background-color: #cbd5e1;
    transition: all 0.3s ease;
  }

  .progress-dot.active {
    width: 24px;
    background-color: #FF8C42;
  }

  .primary-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #FF8C42 0%, #FF7028 100%);
    color: white;
    padding: 0.875rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 12px rgba(255, 140, 66, 0.3);
    pointer-events: auto;
  }

  .primary-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(255, 140, 66, 0.4);
  }

  /* Responsive */
  @media (max-width: 968px) {
    .features-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  @media (max-width: 640px) {
    .section-title {
      font-size: 1.75rem;
    }

    .section-subtitle {
      font-size: 0.875rem;
    }

    .feature-card {
      padding: 1.25rem;
    }

    .floating-button-container {
      padding: 1rem;
    }
  }
</style>
