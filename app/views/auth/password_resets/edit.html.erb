<% content_for :title, "Create New Password" %>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1>Create new password</h1>
      <p>Enter your new password below</p>
    </div>

    <%= form_with url: auth_password_reset_path(token: params[:token]), method: :patch, local: true, class: "auth-form" do |f| %>
      <% if flash[:alert] %>
        <div class="form-errors">
          <div class="error-message"><%= flash[:alert] %></div>
        </div>
      <% end %>

      <div class="form-group">
        <%= label_tag :password, "New password", class: "form-label" %>
        <%= password_field_tag :password,
              nil,
              class: "form-input",
              placeholder: "Enter your new password (minimum 6 characters)",
              required: true,
              minlength: 6,
              autofocus: true %>
      </div>

      <div class="form-group">
        <%= label_tag :password_confirmation, "Confirm new password", class: "form-label" %>
        <%= password_field_tag :password_confirmation,
              nil,
              class: "form-input",
              placeholder: "Confirm your new password",
              required: true,
              minlength: 6 %>
      </div>

      <div class="form-actions">
        <%= submit_tag "Reset password", class: "btn btn-primary btn-large" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <p>Remember your password? <%= link_to "Login here", login_path, class: "auth-link" %></p>
    </div>
  </div>
</div>

<style>
.auth-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  padding: 2rem 1rem;
}

.auth-card {
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05), 0 10px 20px rgba(0, 0, 0, 0.1);
  padding: 2.5rem;
  width: 100%;
  max-width: 400px;
}

.auth-header {
  text-align: center;
  margin-bottom: 2rem;
}

.auth-header h1 {
  font-size: 1.75rem;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 0.5rem;
}

.auth-header p {
  color: #6b7280;
  font-size: 0.95rem;
}

.auth-form .form-group {
  margin-bottom: 1.5rem;
}

.auth-form .form-label {
  display: block;
  font-weight: 500;
  color: #374151;
  margin-bottom: 0.5rem;
}

.auth-form .form-input {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 1rem;
  transition: border-color 0.2s, box-shadow 0.2s;
}

.auth-form .form-input:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.auth-form .form-actions {
  margin-bottom: 1.5rem;
}

.auth-form .btn-large {
  width: 100%;
  padding: 0.875rem 1.5rem;
  font-size: 1rem;
  font-weight: 500;
}

.auth-footer {
  text-align: center;
  border-top: 1px solid #e5e7eb;
  padding-top: 1.5rem;
}

.auth-footer p {
  margin-bottom: 0.5rem;
  color: #6b7280;
  font-size: 0.9rem;
}

.auth-link {
  color: #3b82f6;
  text-decoration: none;
  font-weight: 500;
}

.auth-link:hover {
  text-decoration: underline;
}

.form-errors {
  background: #fef2f2;
  border: 1px solid #fecaca;
  border-radius: 6px;
  padding: 0.75rem;
  margin-bottom: 1.5rem;
}

.error-message {
  color: #dc2626;
  font-size: 0.9rem;
}
</style>
