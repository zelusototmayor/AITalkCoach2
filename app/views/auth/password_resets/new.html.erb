<% content_for :title, "Reset Password" %>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1>Reset your password</h1>
      <p>Enter your email address and we'll send you a link to reset your password</p>
    </div>

    <%= form_with url: auth_password_resets_path, local: true, class: "auth-form" do |f| %>
      <div class="form-group">
        <%= label_tag :email, "Email address", class: "form-label" %>
        <%= email_field_tag :email,
              params[:email],
              class: "form-input",
              placeholder: "Enter your email address",
              required: true,
              autofocus: true %>
      </div>

      <div class="form-actions">
        <%= submit_tag "Send reset instructions", class: "btn btn-primary btn-large" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <p>Remember your password? <%= link_to "Login here", login_path, class: "auth-link" %></p>
      <p>‚Üê <%= link_to "Back to home", root_path, class: "auth-link" %></p>
    </div>
  </div>
</div>

<style>
