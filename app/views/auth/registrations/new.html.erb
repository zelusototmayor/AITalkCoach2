<% content_for :title, "Sign Up" %>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1>Create your account</h1>
      <p>Start improving your speaking skills with AI-powered feedback</p>
    </div>

    <%= form_with model: @user, url: signup_path, local: true, class: "auth-form" do |f| %>
      <% if @user.errors.any? %>
        <div class="form-errors">
          <h4><%= pluralize(@user.errors.count, "error") %> prevented this account from being created:</h4>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name,
              class: "form-input",
              placeholder: "Enter your full name",
              required: true,
              autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email,
              class: "form-input",
              placeholder: "Enter your email address",
              required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password,
              class: "form-input",
              placeholder: "Choose a secure password (min 6 characters)",
              required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= f.password_field :password_confirmation,
              class: "form-input",
              placeholder: "Confirm your password",
              required: true %>
      </div>

      <div class="form-actions">
        <%= f.submit "Create Account", class: "btn btn-primary btn-large" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <p>Already have an account? <%= link_to "Login here", login_path, class: "auth-link" %></p>
      <p>‚Üê <%= link_to "Back to home", root_path, class: "auth-link" %></p>
    </div>
  </div>
</div>

<style>
.auth-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  padding: 2rem 1rem;
}

.auth-card {
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05), 0 10px 20px rgba(0, 0, 0, 0.1);
  padding: 2.5rem;
  width: 100%;
  max-width: 400px;
}

.auth-header {
  text-align: center;
  margin-bottom: 2rem;
}

.auth-header h1 {
  font-size: 1.75rem;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 0.5rem;
}

.auth-header p {
  color: #6b7280;
  font-size: 0.95rem;
}

.auth-form .form-group {
  margin-bottom: 1.5rem;
}

.auth-form .form-label {
  display: block;
  font-weight: 500;
  color: #374151;
  margin-bottom: 0.5rem;
}

.auth-form .form-input {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 1rem;
  transition: border-color 0.2s, box-shadow 0.2s;
}

.auth-form .form-input:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.auth-form .form-actions {
  margin-bottom: 1.5rem;
}

.auth-form .btn-large {
  width: 100%;
  padding: 0.875rem 1.5rem;
  font-size: 1rem;
  font-weight: 500;
}

.auth-footer {
  text-align: center;
  border-top: 1px solid #e5e7eb;
  padding-top: 1.5rem;
}

.auth-footer p {
  margin-bottom: 0.5rem;
  color: #6b7280;
  font-size: 0.9rem;
}

.auth-link {
  color: #3b82f6;
  text-decoration: none;
  font-weight: 500;
}

.auth-link:hover {
  text-decoration: underline;
}

.form-errors {
  background: #fef2f2;
  border: 1px solid #fecaca;
  border-radius: 6px;
  padding: 0.75rem;
  margin-bottom: 1.5rem;
}

.form-errors h4 {
  color: #dc2626;
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
}

.form-errors ul {
  margin: 0;
  padding-left: 1rem;
}

.form-errors li {
  color: #dc2626;
  font-size: 0.85rem;
  margin-bottom: 0.25rem;
}
</style>