<% content_for :title, "Login" %>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1>Welcome back</h1>
      <p>Login to continue improving your speaking skills</p>
    </div>

    <%= form_with scope: :session, url: login_path, local: true, class: "auth-form" do |f| %>
      <% if flash[:alert] %>
        <div class="form-errors">
          <div class="error-message"><%= flash[:alert] %></div>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email,
              class: "form-input",
              placeholder: "Enter your email address",
              required: true,
              autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password,
              class: "form-input",
              placeholder: "Enter your password",
              required: true %>
      </div>

      <div class="form-actions">
        <%= f.submit "Login", class: "btn btn-primary btn-large" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <p>Don't have an account? <%= link_to "Sign up here", signup_path, class: "auth-link" %></p>
      <p>‚Üê <%= link_to "Back to home", root_path, class: "auth-link" %></p>
    </div>
  </div>
</div>

<style>
.auth-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  padding: 2rem 1rem;
}

.auth-card {
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05), 0 10px 20px rgba(0, 0, 0, 0.1);
  padding: 2.5rem;
  width: 100%;
  max-width: 400px;
}

.auth-header {
  text-align: center;
  margin-bottom: 2rem;
}

.auth-header h1 {
  font-size: 1.75rem;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 0.5rem;
}

.auth-header p {
  color: #6b7280;
  font-size: 0.95rem;
}

.auth-form .form-group {
  margin-bottom: 1.5rem;
}

.auth-form .form-label {
  display: block;
  font-weight: 500;
  color: #374151;
  margin-bottom: 0.5rem;
}

.auth-form .form-input {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 1rem;
  transition: border-color 0.2s, box-shadow 0.2s;
}

.auth-form .form-input:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.auth-form .form-actions {
  margin-bottom: 1.5rem;
}

.auth-form .btn-large {
  width: 100%;
  padding: 0.875rem 1.5rem;
  font-size: 1rem;
  font-weight: 500;
}

.auth-footer {
  text-align: center;
  border-top: 1px solid #e5e7eb;
  padding-top: 1.5rem;
}

.auth-footer p {
  margin-bottom: 0.5rem;
  color: #6b7280;
  font-size: 0.9rem;
}

.auth-link {
  color: #3b82f6;
  text-decoration: none;
  font-weight: 500;
}

.auth-link:hover {
  text-decoration: underline;
}

.form-errors {
  background: #fef2f2;
  border: 1px solid #fecaca;
  border-radius: 6px;
  padding: 0.75rem;
  margin-bottom: 1.5rem;
}

.error-message {
  color: #dc2626;
  font-size: 0.9rem;
}
</style>