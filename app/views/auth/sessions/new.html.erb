<% content_for :title, "Login" %>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1>Welcome back</h1>
      <p>Login to continue improving your speaking skills</p>
    </div>

    <%= form_with scope: :session, url: login_path, local: true, class: "auth-form" do |f| %>
      <% if flash[:alert] %>
        <div class="form-errors">
          <div class="error-message"><%= flash[:alert] %></div>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email,
              class: "form-input",
              placeholder: "Enter your email address",
              required: true,
              autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password,
              class: "form-input",
              placeholder: "Enter your password",
              required: true %>
        <div class="password-help">
          <%= link_to "Forgot your password?", new_auth_password_reset_path, class: "forgot-password-link" %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "Login", class: "btn btn-primary btn-large" %>
      </div>
    <% end %>

    <!-- OAuth Divider -->
    <div class="oauth-divider">
      <span>or continue with</span>
    </div>

    <!-- Social Login Buttons -->
    <div class="social-buttons">
      <% if ENV['GOOGLE_CLIENT_ID'].present? %>
        <div data-controller="google-signin" data-google-signin-client-id-value="<%= ENV['GOOGLE_CLIENT_ID'] %>">
          <div id="google-signin-button" class="social-button-container"></div>
        </div>
      <% end %>

      <% if ENV['APPLE_CLIENT_ID'].present? %>
        <div data-controller="apple-signin"
             data-apple-signin-client-id-value="<%= ENV['APPLE_CLIENT_ID'] %>"
             data-apple-signin-redirect-uri-value="<%= "#{request.protocol}#{request.host_with_port}/auth/callback/apple" %>">
          <button type="button" id="apple-signin-button" class="btn btn-apple">
            <svg class="apple-logo" viewBox="0 0 24 24" width="18" height="18" fill="currentColor">
              <path d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/>
            </svg>
            <span>Continue with Apple</span>
          </button>
        </div>
      <% end %>
    </div>

    <div class="auth-footer">
      <p>Don't have an account? <%= link_to "Sign up here", signup_path, class: "auth-link" %></p>
      <p>‚Üê <%= link_to "Back to home", root_path, class: "auth-link" %></p>
    </div>
  </div>
</div>

<style>
.auth-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  padding: 2rem 1rem;
}

.auth-card {
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05), 0 10px 20px rgba(0, 0, 0, 0.1);
  padding: 2.5rem;
  width: 100%;
  max-width: 400px;
}

.auth-header {
  text-align: center;
  margin-bottom: 2rem;
}

.auth-header h1 {
  font-size: 1.75rem;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 0.5rem;
}

.auth-header p {
  color: #6b7280;
  font-size: 0.95rem;
}

.auth-form .form-group {
  margin-bottom: 1.5rem;
}

.auth-form .form-label {
  display: block;
  font-weight: 500;
  color: #374151;
  margin-bottom: 0.5rem;
}

.auth-form .form-input {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 1rem;
  transition: border-color 0.2s, box-shadow 0.2s;
}

.auth-form .form-input:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.auth-form .form-actions {
  margin-bottom: 1.5rem;
}

.auth-form .btn-large {
  width: 100%;
  padding: 0.875rem 1.5rem;
  font-size: 1rem;
  font-weight: 500;
}

.auth-footer {
  text-align: center;
  border-top: 1px solid #e5e7eb;
  padding-top: 1.5rem;
}

.auth-footer p {
  margin-bottom: 0.5rem;
  color: #6b7280;
  font-size: 0.9rem;
}

.auth-link {
  color: #3b82f6;
  text-decoration: none;
  font-weight: 500;
}

.auth-link:hover {
  text-decoration: underline;
}

.form-errors {
  background: #fef2f2;
  border: 1px solid #fecaca;
  border-radius: 6px;
  padding: 0.75rem;
  margin-bottom: 1.5rem;
}

.error-message {
  color: #dc2626;
  font-size: 0.9rem;
}

.password-help {
  margin-top: 0.5rem;
  text-align: right;
}

.forgot-password-link {
  color: #3b82f6;
  text-decoration: none;
  font-size: 0.875rem;
  font-weight: 500;
}

.forgot-password-link:hover {
  text-decoration: underline;
}

/* OAuth Styles */
.oauth-divider {
  display: flex;
  align-items: center;
  margin: 1.5rem 0;
}

.oauth-divider::before,
.oauth-divider::after {
  content: '';
  flex: 1;
  height: 1px;
  background: #e5e7eb;
}

.oauth-divider span {
  padding: 0 1rem;
  color: #6b7280;
  font-size: 0.875rem;
}

.social-buttons {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  margin-bottom: 1.5rem;
}

.social-button-container {
  width: 100%;
}

.social-button-container > div {
  width: 100% !important;
}

.btn-apple {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  width: 100%;
  padding: 0.75rem 1rem;
  background: #000;
  color: #fff;
  border: none;
  border-radius: 6px;
  font-size: 0.95rem;
  font-weight: 500;
  cursor: pointer;
  transition: opacity 0.2s;
}

.btn-apple:hover {
  opacity: 0.9;
}

.btn-apple .apple-logo {
  flex-shrink: 0;
}

.oauth-error {
  background: #fef2f2;
  color: #dc2626;
  padding: 0.75rem;
  border-radius: 6px;
  margin-bottom: 1rem;
  font-size: 0.875rem;
  text-align: center;
}
</style>