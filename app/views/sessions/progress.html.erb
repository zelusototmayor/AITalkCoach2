<% content_for :title, "Your Progress" %>

<div class="progress-dashboard" data-controller="metric-explorer">
  <div class="page-header">
    <h1>Your Progress</h1>
    <p class="page-subtitle">Track your improvement across all speaking metrics.</p>
  </div>

  <% if @recent_sessions.any? %>
    <!-- Main Chart Section (Large, Center) -->
    <div class="chart-section">
      <div class="chart-header">
        <h2 class="chart-title" data-metric-explorer-target="chartTitle">Overall Score</h2>

        <!-- Time Range Options -->
        <div class="time-range-options">
          <button class="time-btn <%= @time_range == '7' ? 'active' : '' %>"
                  data-range="7"
                  data-action="click->metric-explorer#changeTimeRange"
                  data-metric-explorer-target="timeRangeBtn">
            Last 7 days
          </button>
          <button class="time-btn <%= @time_range == '10_sessions' ? 'active' : '' %>"
                  data-range="10_sessions"
                  data-action="click->metric-explorer#changeTimeRange"
                  data-metric-explorer-target="timeRangeBtn">
            Last 10 sessions
          </button>
          <button class="time-btn <%= @time_range == '10_days' ? 'active' : '' %>"
                  data-range="10_days"
                  data-action="click->metric-explorer#changeTimeRange"
                  data-metric-explorer-target="timeRangeBtn">
            Last 10 days
          </button>
        </div>
      </div>

      <!-- Chart Stats -->
      <div class="chart-stats-row">
        <div class="stat-box">
          <span class="stat-label">Current</span>
          <span class="stat-value" data-metric-explorer-target="currentValue">--</span>
        </div>
        <div class="stat-box">
          <span class="stat-label">Best</span>
          <span class="stat-value" data-metric-explorer-target="bestValue">--</span>
        </div>
        <div class="stat-box">
          <span class="stat-label">Trend</span>
          <span class="stat-value stat-trend" data-metric-explorer-target="trendValue">--</span>
        </div>
      </div>

      <!-- Large Interactive Chart -->
      <div class="chart-canvas-container">
        <canvas data-metric-explorer-target="mainChart"
                data-labels="<%= @chart_data[:labels].to_json %>"
                data-overall-score-values="<%= @chart_data[:overall_score_data].to_json %>"
                data-filler-values="<%= @chart_data[:filler_data].to_json %>"
                data-pace-values="<%= @chart_data[:pace_data].to_json %>"
                data-clarity-values="<%= @chart_data[:clarity_data].to_json %>"
                data-pace-consistency-values="<%= @chart_data[:pace_consistency_data].to_json %>"
                data-fluency-values="<%= @chart_data[:fluency_data].to_json %>"
                data-engagement-values="<%= @chart_data[:engagement_data].to_json %>"></canvas>
      </div>
    </div>

    <!-- Interactive Metric Cards (Click to explore) -->
    <div class="interactive-metrics-grid">
      <%
        detail_metrics = [
          {
            key: 'overall_score',
            label: 'Overall Score',
            tooltip: 'Your comprehensive speaking performance across all metrics',
            inverse: false,
            goal: '≥ 80%'
          },
          {
            key: 'filler_rate',
            label: 'Filler %',
            tooltip: 'Percentage of words that are fillers (um, uh, like). Lower is better.',
            inverse: true,
            goal: '< 3%'
          },
          {
            key: 'clarity',
            label: 'Clarity',
            tooltip: 'Measures articulation, pace consistency, and pause quality',
            inverse: false,
            goal: '≥ 90%'
          },
          {
            key: 'pace',
            label: 'Pace',
            tooltip: 'Your speaking rate in words per minute. Ideal: 140-170 WPM',
            inverse: false,
            goal: '140-170',
            is_wpm: true
          },
          {
            key: 'pace_consistency',
            label: 'Consistency',
            tooltip: 'How steady your speaking pace is throughout the session',
            inverse: false,
            goal: '≥ 80%'
          },
          {
            key: 'fluency',
            label: 'Fluency',
            tooltip: 'Smoothness of delivery without interruptions or hesitations',
            inverse: false,
            goal: '≥ 85%'
          },
          {
            key: 'engagement',
            label: 'Engagement',
            tooltip: 'Energy level and vocal variety in your speech',
            inverse: false,
            goal: '≥ 75%'
          }
        ]
      %>

      <% detail_metrics.each_with_index do |metric, index| %>
        <%
          snapshot_key = metric[:key].to_sym
          snapshot_data = @skill_snapshot&.dig(snapshot_key)
          score = snapshot_data&.dig(:score) || 0
          delta = snapshot_data&.dig(:delta) || 0

          is_positive = metric[:inverse] ? delta <= 0 : delta >= 0
          delta_class = is_positive ? 'positive' : 'negative'
          delta_arrow = is_positive ? '▲' : '▼'

          is_focus = @weekly_focus && metric[:key] == get_metric_key_for_focus(@weekly_focus.focus_type)
        %>

        <button class="interactive-metric-card <%= 'active' if index == 0 %> <%= 'focused' if is_focus %>"
                data-metric="<%= metric[:key] %>"
                data-action="click->metric-explorer#selectMetric"
                data-metric-explorer-target="metricCard">
          <% if is_focus %>
            <div class="focus-tag">Focus</div>
          <% end %>

          <div class="metric-name">
            <%= metric[:label] %>
            <span class="info-tip" title="<%= metric[:tooltip] %>">ⓘ</span>
          </div>

          <div class="metric-score">
            <%= metric[:is_wpm] ? score : "#{score}%" %>
          </div>

          <div class="metric-change <%= delta_class %>">
            <%= delta_arrow %> <%= delta.abs %><%= metric[:is_wpm] ? '' : '%' %>
          </div>
        </button>
      <% end %>
    </div>

    <!-- Practice Calendar -->
    <div class="calendar-section">
      <h2 class="section-title">Practice Calendar</h2>
      <p class="section-subtitle">Your practice consistency this year</p>

      <% if @calendar_data.present? %>
        <div class="calendar-grid">
          <% @calendar_data.each do |day| %>
            <div class="calendar-day <%= day[:has_session] ? 'trained' : 'missed' %>"
                 title="<%= day[:date].strftime('%b %d, %Y') %>">
            </div>
          <% end %>
        </div>

        <div class="calendar-legend">
          <div class="legend-item">
            <div class="legend-dot missed"></div>
            <span>No practice</span>
          </div>
          <div class="legend-item">
            <div class="legend-dot trained"></div>
            <span>Practice completed</span>
          </div>
        </div>
      <% end %>
    </div>

  <% else %>
    <div class="no-sessions-message">
      <h3>No Sessions Yet</h3>
      <p>Complete practice sessions to see your progress dashboard!</p>
      <%= link_to "Start Practicing", practice_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<style>
  .progress-dashboard {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #1e293b;
    margin: 0 0 0.5rem 0;
  }

  .page-subtitle {
    font-size: 1.125rem;
    color: #64748b;
    margin: 0;
  }


  /* Main Chart Section */
  .chart-section {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .chart-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0;
  }

  /* Time Range Options */
  .time-range-options {
    display: flex;
    gap: 0.5rem;
    background: #f8fafc;
    padding: 0.375rem;
    border-radius: 12px;
  }

  .time-btn {
    padding: 0.5rem 1rem;
    border: none;
    background: transparent;
    color: #64748b;
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s;
    white-space: nowrap;
  }

  .time-btn:hover {
    background: white;
    color: #1e293b;
  }

  .time-btn.active {
    background: linear-gradient(135deg, #FF8C42, #FFAB73);
    color: white;
    box-shadow: 0 2px 4px rgba(255, 140, 66, 0.2);
  }

  /* Chart Stats Row */
  .chart-stats-row {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .stat-box {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1e293b;
  }

  .stat-trend {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  /* Chart Canvas */
  .chart-canvas-container {
    background: #f8fafc;
    border-radius: 12px;
    padding: 1.5rem;
  }

  /* Interactive Metric Cards (Clickable) */
  .interactive-metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 0.875rem;
    margin-bottom: 2rem;
  }

  .interactive-metric-card {
    background: white;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    padding: 0.75rem;
    transition: all 0.2s ease;
    position: relative;
    cursor: pointer;
    text-align: left;
    display: flex;
    flex-direction: column;
  }

  .interactive-metric-card:hover {
    border-color: #FF8C42;
    box-shadow: 0 2px 8px rgba(255, 140, 66, 0.15);
    transform: translateY(-2px);
  }

  .interactive-metric-card.active {
    border-color: #FF8C42;
    background: linear-gradient(135deg, #fff5ed 0%, #ffffff 100%);
    box-shadow: 0 4px 12px rgba(255, 140, 66, 0.25);
    transform: translateY(-2px);
  }

  .interactive-metric-card.focused {
    border-color: #FF8C42;
  }

  .interactive-metric-card.active.focused {
    background: linear-gradient(135deg, #fff5ed 0%, #ffffff 100%);
  }

  .focus-tag {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: #FF8C42;
    color: white;
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    padding: 0.25rem 0.5rem;
    border-radius: 8px;
    letter-spacing: 0.05em;
  }

  .metric-name {
    font-size: 0.75rem;
    font-weight: 600;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .info-tip {
    font-size: 0.625rem;
    color: #94a3b8;
    cursor: help;
  }

  .metric-score {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.375rem;
  }

  .metric-change {
    font-size: 0.875rem;
    font-weight: 600;
  }

  .metric-change.positive {
    color: #10b981;
  }

  .metric-change.negative {
    color: #ef4444;
  }

  /* Calendar Section */
  .calendar-section {
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0 0 0.5rem 0;
  }

  .section-subtitle {
    font-size: 1rem;
    color: #64748b;
    margin: 0 0 1.5rem 0;
  }

  .calendar-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(12px, 1fr));
    gap: 4px;
    margin-bottom: 1.5rem;
    max-width: 100%;
  }

  .calendar-day {
    width: 12px;
    height: 12px;
    border-radius: 3px;
    transition: all 0.2s;
  }

  .calendar-day.missed {
    background: #e2e8f0;
  }

  .calendar-day.trained {
    background: #FF8C42;
  }

  .calendar-day:hover {
    transform: scale(1.3);
    cursor: pointer;
  }

  .calendar-legend {
    display: flex;
    gap: 1.5rem;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .legend-dot {
    width: 12px;
    height: 12px;
    border-radius: 3px;
  }

  .legend-dot.missed {
    background: #e2e8f0;
  }

  .legend-dot.trained {
    background: #FF8C42;
  }

  .legend-item span {
    font-size: 0.875rem;
    color: #64748b;
  }

  /* No sessions state */
  .no-sessions-message {
    text-align: center;
    padding: 4rem 2rem;
  }

  .no-sessions-message h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0 0 1rem 0;
  }

  .no-sessions-message p {
    font-size: 1.125rem;
    color: #64748b;
    margin: 0 0 2rem 0;
  }

  .btn-primary {
    background: linear-gradient(135deg, #FF8C42, #FFAB73);
    color: white;
    padding: 0.875rem 1.5rem;
    border-radius: 10px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    display: inline-block;
    border: none;
    cursor: pointer;
    transition: all 0.2s;
    box-shadow: 0 2px 4px rgba(255, 140, 66, 0.2);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 140, 66, 0.4);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .progress-dashboard {
      padding: 1.5rem 1rem;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .chart-header {
      flex-direction: column;
      align-items: stretch;
    }

    .time-range-options {
      width: 100%;
      justify-content: space-between;
    }

    .time-btn {
      flex: 1;
      padding: 0.5rem 0.5rem;
      font-size: 0.75rem;
    }

    .chart-stats-row {
      justify-content: space-between;
    }

    .interactive-metrics-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<script>
  mixpanel.track("Page Viewed", { page: "progress" });
</script>
