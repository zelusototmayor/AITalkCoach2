<% content_for :title, "Your Coach" %>

<div class="coach-page" data-controller="progress-dashboard">
  <div class="page-header">
    <h1>Your Personal Coach</h1>
    <p class="page-subtitle">Your personalized plan to improve your speaking skills.</p>
  </div>

  <% if @recent_sessions.any? %>
    <div class="coach-content">

      <!-- Last Session Insight (NEW) -->
      <% if @last_session_insight %>
        <div class="last-session-insight-card">
          <div class="card-header">
            <h3>LAST SESSION INSIGHT</h3>
            <span class="session-date"><%= @last_session_insight[:date].strftime("%b %d, %Y") %></span>
          </div>

          <div class="insight-narrative">
            <p><%= @last_session_insight[:narrative] %></p>
          </div>

          <div class="insight-metrics-grid">
            <% if @last_session_insight[:key_metrics][:filler_rate] %>
              <div class="insight-metric">
                <span class="metric-label">Filler %</span>
                <span class="metric-value"><%= (@last_session_insight[:key_metrics][:filler_rate] * 100).round(1) %>%</span>
              </div>
            <% end %>

            <% if @last_session_insight[:key_metrics][:clarity_score] %>
              <div class="insight-metric">
                <span class="metric-label">Clarity</span>
                <span class="metric-value"><%= (@last_session_insight[:key_metrics][:clarity_score] * 100).round %>%</span>
              </div>
            <% end %>

            <% if @last_session_insight[:key_metrics][:wpm] %>
              <div class="insight-metric">
                <span class="metric-label">Pace</span>
                <span class="metric-value"><%= @last_session_insight[:key_metrics][:wpm].round %> WPM</span>
              </div>
            <% end %>
          </div>

          <%= link_to "View Full Report", session_path(@last_session_insight[:session]), class: "btn-link" %>
        </div>
      <% end %>

      <!-- Weekly Focus Section -->
      <div class="weekly-focus-card">
        <div class="card-header">
          <h3>THIS WEEK'S GOAL</h3>
          <span class="estimated-time">Est. time<br>6‚Äì8 min / day</span>
        </div>

        <% if @priority_recommendations&.dig(:focus_this_week)&.first %>
          <% focus_area = @priority_recommendations[:focus_this_week].first %>

          <div class="focus-title">
            <span class="focus-icon"><%= icon_svg(:fire, css_class: 'icon-inline') %></span>
            <h2><%= humanize_improvement_type(focus_area[:type]) %></h2>
          </div>

          <!-- Personalized Narrative (ENHANCED) -->
          <div class="focus-narrative">
            <% if @weekly_focus_tracking %>
              <%
                current = focus_area[:current_value]
                target = focus_area[:target_value]
                progress = @weekly_focus_tracking[:sessions_this_week]
                total = @weekly_focus_tracking[:target_this_week]
              %>
              <p class="narrative-text">
                <%= generate_weekly_focus_narrative(focus_area, @weekly_focus_tracking) %>
              </p>
            <% else %>
              <p class="narrative-text">
                Target <%= format_metric_value(focus_area[:target_value], focus_area[:type]) %> by Sunday.
                Average last 5 sessions: <%= format_metric_value(focus_area[:current_value], focus_area[:type]) %>.
              </p>
            <% end %>
          </div>

          <div class="focus-progress-grid">
            <div class="progress-item">
              <div class="progress-label">Today</div>
              <div class="progress-value">
                <%= @weekly_focus_tracking ? "#{@weekly_focus_tracking[:sessions_today]} / #{@weekly_focus_tracking[:target_today]} drills" : "0 / 2 drills" %>
              </div>
            </div>
            <div class="progress-item">
              <div class="progress-label">Week</div>
              <div class="progress-value">
                <%= @weekly_focus_tracking ? "#{@weekly_focus_tracking[:sessions_this_week]} / #{@weekly_focus_tracking[:target_this_week]} drills" : "0 / 10 drills" %>
              </div>
            </div>
            <div class="progress-item">
              <div class="progress-label">Streak</div>
              <div class="progress-value">
                <%= @weekly_focus_tracking ? "#{@weekly_focus_tracking[:streak_days]} day#{'s' unless @weekly_focus_tracking[:streak_days] == 1}" : "0 days" %>
              </div>
            </div>
          </div>

          <div class="focus-actions">
            <% if @daily_plan && @daily_plan[:drills].present? %>
              <%= link_to icon_from_emoji(@daily_plan[:drills].first[:icon]) + " #{@daily_plan[:drills].first[:title]}",
                  practice_path(
                    weekly_focus_id: @weekly_focus&.id,
                    is_planned_session: true,
                    drill_title: @daily_plan[:drills].first[:title],
                    target_seconds: @daily_plan[:drills].first[:duration_seconds]
                  ),
                  class: "btn btn-primary" %>
              <% if @daily_plan[:drills].length > 1 %>
                <%= link_to icon_from_emoji(@daily_plan[:drills][1][:icon]) + " #{@daily_plan[:drills][1][:title]}",
                    practice_path(
                      weekly_focus_id: @weekly_focus&.id,
                      is_planned_session: true,
                      drill_title: @daily_plan[:drills][1][:title],
                      target_seconds: @daily_plan[:drills][1][:duration_seconds]
                    ),
                    class: "btn btn-secondary" %>
              <% end %>
            <% else %>
              <%= link_to icon_svg(:mic, css_class: 'icon-inline') + " Start Practice", practice_path, class: "btn btn-primary" %>
            <% end %>
          </div>

          <!-- Why This Focus (NEW) -->
          <div class="why-this-focus">
            <strong>Why this focus?</strong>
            <p><%= focus_area[:actionable_steps]&.first || "Based on your recent sessions, this is your highest-impact area for improvement." %></p>
          </div>
        <% else %>
          <div class="no-focus">
            <p>Complete more sessions to get personalized weekly focus recommendations.</p>
            <%= link_to "Start Practicing", practice_path, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>

      <!-- Today's Focus (renamed from Today's Plan) -->
      <div class="daily-plan-card">
        <div class="card-header">
          <h3>TODAY'S FOCUS</h3>
        </div>

        <% if @daily_plan && @daily_plan[:drills].present? %>
          <div class="plan-items">
            <% @daily_plan[:drills].each do |drill| %>
              <div class="plan-item">
                <div class="plan-number"><%= drill[:order] %></div>
                <div class="plan-content">
                  <h4><%= icon_from_emoji(drill[:icon]) %> <%= drill[:title] %></h4>
                  <p class="drill-description"><%= drill[:description] %></p>

                  <!-- Drill Reasoning (ENHANCED) - Will be populated by service update -->
                  <% if drill[:reasoning].present? %>
                    <p class="drill-reasoning">üí° <%= drill[:reasoning] %></p>
                  <% end %>
                </div>
                <%= link_to practice_path(
                  weekly_focus_id: drill[:weekly_focus_id],
                  is_planned_session: true,
                  drill_title: drill[:title],
                  target_seconds: drill[:duration_seconds]
                ), class: "btn-start", method: :get do %>
                  ‚≠ê Start
                <% end %>
              </div>
            <% end %>
          </div>

          <div class="plan-actions">
            <%= link_to icon_svg(:star, css_class: 'icon-inline') + " Start Today's Plan", practice_path(
              weekly_focus_id: @weekly_focus&.id,
              is_planned_session: true,
              drill_title: @daily_plan[:drills].first[:title],
              target_seconds: @daily_plan[:drills].first[:duration_seconds]
            ), class: "btn btn-primary" %>
          </div>
        <% else %>
          <div class="plan-items">
            <div class="plan-item">
              <div class="plan-number">1</div>
              <div class="plan-content">
                <h4>Complete More Sessions</h4>
                <p>Record a few more practice sessions to get personalized daily plans.</p>
              </div>
              <%= link_to practice_path, class: "btn-start" do %>
                <%= icon_svg(:star, css_class: 'icon-inline') %> Start
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Practice Calendar -->
      <div class="practice-calendar-card">
        <div class="card-header">
          <h3>PRACTICE CALENDAR</h3>
        </div>

        <% if @calendar_data.present? %>
          <div class="calendar-grid">
            <% @calendar_data.each do |day| %>
              <div class="calendar-day <%= day[:has_session] ? 'trained' : 'missed' %>"
                   title="<%= day[:date].strftime('%b %d, %Y') %>">
              </div>
            <% end %>
          </div>

          <div class="calendar-legend">
            <div class="legend-item">
              <div class="legend-dot missed"></div>
              <span>Missed day</span>
            </div>
            <div class="legend-item">
              <div class="legend-dot trained"></div>
              <span>Trained</span>
            </div>
          </div>

          <div class="calendar-note">
            Each filled square = a completed practice day. Keep the streak alive.
          </div>
        <% end %>
      </div>

      <!-- Quick Link to Progress Dashboard -->
      <div class="progress-link-card">
        <%= link_to progress_path, class: "progress-link-btn" do %>
          <div class="link-content">
            <span class="link-icon"><%= icon_svg(:chart_bar, css_class: 'icon-inline') %></span>
            <div class="link-text">
              <h4>View Detailed Progress</h4>
              <p>Track your improvement across all metrics</p>
            </div>
          </div>
          <span class="link-arrow">‚Üí</span>
        <% end %>
      </div>

    </div>
  <% else %>
    <div class="no-sessions-message">
      <h3><%= icon_svg(:mic, css_class: 'icon-inline') %> No Sessions Yet</h3>
      <p>Complete a few practice sessions to get your personalized coaching plan!</p>
      <%= link_to "Start Practicing", practice_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

