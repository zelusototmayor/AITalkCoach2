<% content_for :title, "Your Progress" %>

<div class="progress-dashboard" data-controller="metric-explorer">
  <div class="page-header">
    <h1>Your Progress</h1>
    <p class="page-subtitle">Track your improvement across all speaking metrics.</p>
  </div>

  <% if @recent_sessions.any? %>
    <!-- Quick Link to Coach Page -->
    <div class="coach-link-banner">
      <%= link_to coach_path, class: "coach-link-btn" do %>
        <div class="link-content">
          <span class="link-icon">ðŸŽ¯</span>
          <div class="link-text">
            <h4>View Your Personalized Plan</h4>
            <p>Get your daily focus and weekly coaching</p>
          </div>
        </div>
        <span class="link-arrow">â†’</span>
      <% end %>
    </div>

    <!-- Metric Cards Grid -->
    <div class="metrics-overview-section">
      <h2 class="section-title">All Metrics Overview</h2>
      <p class="section-subtitle">Click any metric to see detailed progress</p>

      <div class="metrics-grid">
        <%
          metrics_config = [
            {
              key: 'filler_rate',
              label: 'Filler %',
              tooltip: 'Percentage of words that are fillers (um, uh, like). Lower is better.',
              inverse: true,  # Lower is better
              goal: '< 3%'
            },
            {
              key: 'clarity',
              label: 'Clarity',
              tooltip: 'Measures articulation, pace consistency, and pause quality',
              inverse: false,
              goal: 'â‰¥ 90%'
            },
            {
              key: 'pace',
              label: 'Pace',
              tooltip: 'Your speaking rate in words per minute. Ideal: 140-170 WPM',
              inverse: false,
              goal: '140-170',
              is_wpm: true
            },
            {
              key: 'pace_consistency',
              label: 'Consistency',
              tooltip: 'How steady your speaking pace is throughout the session',
              inverse: false,
              goal: 'â‰¥ 80%'
            },
            {
              key: 'fluency',
              label: 'Fluency',
              tooltip: 'Smoothness of delivery without interruptions or hesitations',
              inverse: false,
              goal: 'â‰¥ 85%'
            },
            {
              key: 'engagement',
              label: 'Engagement',
              tooltip: 'Energy level and vocal variety in your speech',
              inverse: false,
              goal: 'â‰¥ 75%'
            }
          ]
        %>

        <% metrics_config.each do |metric| %>
          <%
            snapshot_key = case metric[:key]
            when 'clarity' then :clarity
            when 'filler_rate' then :filler_rate
            when 'pace' then :pace
            else metric[:key].to_sym
            end

            snapshot_data = @skill_snapshot&.dig(snapshot_key)
            score = snapshot_data&.dig(:score) || 0
            delta = snapshot_data&.dig(:delta) || 0

            # Determine if change is positive based on metric type
            is_positive = metric[:inverse] ? delta <= 0 : delta >= 0
            delta_class = is_positive ? 'positive' : 'negative'
            delta_arrow = is_positive ? 'â–²' : 'â–¼'

            # Highlight if this is the weekly focus metric
            is_focus = @weekly_focus && metric[:key] == get_metric_key_for_focus(@weekly_focus.focus_type)
          %>

          <button class="metric-card <%= 'focused-metric' if is_focus %>"
                  data-metric="<%= metric[:key] %>"
                  data-action="click->metric-explorer#selectMetric"
                  data-metric-explorer-target="metricCard">
            <% if is_focus %>
              <div class="focus-badge">Current Focus</div>
            <% end %>

            <div class="metric-header">
              <span class="metric-label">
                <%= metric[:label] %>
                <span class="info-icon" title="<%= metric[:tooltip] %>">â“˜</span>
              </span>
            </div>

            <div class="metric-value-row">
              <span class="metric-value">
                <%= metric[:is_wpm] ? score : "#{score}%" %>
              </span>
              <span class="metric-delta <%= delta_class %>">
                <%= delta_arrow %> <%= delta.abs %><%= metric[:is_wpm] ? '' : '%' %>
              </span>
            </div>

            <div class="metric-goal">
              Goal: <%= metric[:goal] %>
            </div>

            <!-- Mini Sparkline (placeholder for now, will be populated by JS) -->
            <div class="metric-sparkline" data-metric-explorer-target="sparkline-<%= metric[:key] %>">
              <canvas width="100" height="30"></canvas>
            </div>
          </button>
        <% end %>
      </div>
    </div>

    <!-- Interactive Metric Explorer -->
    <div class="metric-explorer-section">
      <div class="explorer-header">
        <h2 class="section-title">Detailed Progress</h2>

        <div class="explorer-controls">
          <!-- Metric Selector -->
          <div class="metric-selector-dropdown">
            <label for="metric-select">Viewing:</label>
            <select id="metric-select"
                    data-metric-explorer-target="metricSelect"
                    data-action="change->metric-explorer#selectMetricFromDropdown">
              <option value="filler_rate" selected>Filler %</option>
              <option value="clarity">Clarity</option>
              <option value="pace">Pace (WPM)</option>
              <option value="pace_consistency">Pace Consistency</option>
              <option value="fluency">Fluency</option>
              <option value="engagement">Engagement</option>
            </select>
          </div>

          <!-- Time Range Filter -->
          <div class="time-range-filters">
            <button class="time-range-btn <%= @time_range == '7' ? 'active' : '' %>"
                    data-range="7"
                    data-action="click->metric-explorer#changeTimeRange"
                    data-metric-explorer-target="timeRangeBtn">
              Last 7
            </button>
            <button class="time-range-btn <%= @time_range == '30' ? 'active' : '' %>"
                    data-range="30"
                    data-action="click->metric-explorer#changeTimeRange"
                    data-metric-explorer-target="timeRangeBtn">
              Last 30
            </button>
            <button class="time-range-btn <%= @time_range == 'lifetime' ? 'active' : '' %>"
                    data-range="lifetime"
                    data-action="click->metric-explorer#changeTimeRange"
                    data-metric-explorer-target="timeRangeBtn">
              Lifetime
            </button>
          </div>
        </div>
      </div>

      <!-- Main Chart -->
      <div class="chart-container-main">
        <div class="chart-meta">
          <h3 class="chart-title" data-metric-explorer-target="chartTitle">Filler Word Progress</h3>
          <div class="chart-stats">
            <span class="stat-item">
              <span class="stat-label">Current:</span>
              <span class="stat-value" data-metric-explorer-target="currentValue">--</span>
            </span>
            <span class="stat-item">
              <span class="stat-label">Best:</span>
              <span class="stat-value" data-metric-explorer-target="bestValue">--</span>
            </span>
            <span class="stat-item">
              <span class="stat-label">Trend:</span>
              <span class="stat-value stat-trend" data-metric-explorer-target="trendValue">--</span>
            </span>
          </div>
        </div>

        <canvas data-metric-explorer-target="mainChart"
                data-labels="<%= @chart_data[:labels].to_json %>"
                data-filler-values="<%= @chart_data[:filler_data].to_json %>"
                data-pace-values="<%= @chart_data[:pace_data].to_json %>"
                data-clarity-values="<%= @chart_data[:clarity_data].to_json %>"
                data-pace-consistency-values="<%= @chart_data[:pace_consistency_data].to_json %>"
                data-fluency-values="<%= @chart_data[:fluency_data].to_json %>"
                data-engagement-values="<%= @chart_data[:engagement_data].to_json %>"></canvas>

        <div class="chart-footer">
          <span class="chart-note">Each point represents a session. The dashed line shows your target.</span>
        </div>
      </div>
    </div>

    <!-- Achievements & Milestones -->
    <% if @achievements&.any? %>
      <div class="achievements-section">
        <h2 class="section-title">Achievements & Milestones</h2>
        <p class="section-subtitle">Celebrate your progress and accomplishments</p>

        <div class="achievements-grid">
          <% @achievements.each do |achievement| %>
            <div class="achievement-card <%= 'recent' if @recent_milestones&.include?(achievement) %>">
              <div class="achievement-icon"><%= achievement[:icon] %></div>
              <div class="achievement-content">
                <h3 class="achievement-title"><%= achievement[:title] %></h3>
                <p class="achievement-description"><%= achievement[:description] %></p>
                <% if @recent_milestones&.include?(achievement) %>
                  <span class="achievement-badge">New!</span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Practice Calendar -->
    <div class="calendar-section">
      <h2 class="section-title">Practice Calendar</h2>
      <p class="section-subtitle">Your practice consistency over the year</p>

      <% if @calendar_data.present? %>
        <div class="calendar-grid">
          <% @calendar_data.each do |day| %>
            <div class="calendar-day <%= day[:has_session] ? 'trained' : 'missed' %>"
                 title="<%= day[:date].strftime('%b %d, %Y') %>">
            </div>
          <% end %>
        </div>

        <div class="calendar-legend">
          <div class="legend-item">
            <div class="legend-dot missed"></div>
            <span>No practice</span>
          </div>
          <div class="legend-item">
            <div class="legend-dot trained"></div>
            <span>Practice completed</span>
          </div>
        </div>
      <% end %>
    </div>

  <% else %>
    <div class="no-sessions-message">
      <h3>No Sessions Yet</h3>
      <p>Complete practice sessions to see your progress dashboard!</p>
      <%= link_to "Start Practicing", practice_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

