<% content_for :title, "Your Coach" %>

<div class="coach-page">
  <div class="page-header">
    <h1>Your Personal Coach</h1>
    <p class="page-subtitle">Your personalized plan to improve your speaking skills</p>
  </div>

  <% if @recent_sessions.any? %>
    <div class="coach-dashboard">

      <!-- Row 1: Last Session Insight + Weekly Goal (Side by Side) -->
      <div class="dashboard-row-top">
        <!-- Last Session Insight (Enhanced, 50% width) -->
        <% if @last_session_insight %>
          <div class="last-session-card">
            <div class="card-header-compact">
              <%= icon_svg(:activity, css_class: 'header-icon') %>
              <div>
                <h3>Last Session</h3>
                <span class="session-date"><%= @last_session_insight[:date].strftime("%b %d") %></span>
              </div>
            </div>

            <p class="insight-text"><%= @last_session_insight[:narrative] %></p>

            <!-- Overall Score (Prominent) -->
            <% if @last_session_insight[:key_metrics][:overall_score][:value] %>
              <%
                overall = @last_session_insight[:key_metrics][:overall_score]
                value_pct = (overall[:value] * 100).round
                delta_pct = overall[:delta] ? (overall[:delta] * 100).round : nil
                delta_class = if delta_pct.nil?
                  'neutral'
                elsif delta_pct > 0
                  'positive'
                elsif delta_pct < 0
                  'negative'
                else
                  'neutral'
                end
              %>
              <div class="overall-score-display">
                <span class="overall-label">Overall Score</span>
                <span class="overall-value">
                  <%= value_pct %>%
                  <% if delta_pct %>
                    <span class="delta <%= delta_class %>">
                      <%= delta_pct > 0 ? '▲' : delta_pct < 0 ? '▼' : '—' %>
                      <%= delta_pct.abs %>%
                    </span>
                  <% end %>
                </span>
              </div>
            <% end %>

            <!-- All Metrics Grid (3 columns x 2 rows) -->
            <div class="metrics-grid-compact">
              <%
                metrics_config = [
                  { key: :filler_rate, label: 'Filler', is_percent: true, inverse: true, multiplier: 100, decimals: 1 },
                  { key: :clarity_score, label: 'Clarity', is_percent: true, inverse: false, multiplier: 100, decimals: 0 },
                  { key: :wpm, label: 'Pace', is_percent: false, inverse: false, multiplier: 1, decimals: 0 },
                  { key: :fluency_score, label: 'Fluency', is_percent: true, inverse: false, multiplier: 100, decimals: 0 },
                  { key: :engagement_score, label: 'Engagement', is_percent: true, inverse: false, multiplier: 100, decimals: 0 },
                  { key: :pace_consistency, label: 'Consistency', is_percent: true, inverse: false, multiplier: 100, decimals: 0 }
                ]
              %>

              <% metrics_config.each do |config| %>
                <%
                  metric = @last_session_insight[:key_metrics][config[:key]]
                  next unless metric && metric[:value]

                  value = (metric[:value] * config[:multiplier]).round(config[:decimals])
                  delta_raw = metric[:delta] ? (metric[:delta] * config[:multiplier]).round(config[:decimals]) : nil

                  # Determine if improvement (considering inverse metrics like filler)
                  is_improvement = if delta_raw.nil?
                    nil
                  elsif config[:inverse]
                    delta_raw < 0 # For filler, lower is better
                  else
                    delta_raw > 0 # For most metrics, higher is better
                  end

                  delta_class = if is_improvement.nil?
                    'neutral'
                  elsif is_improvement
                    'positive'
                  else
                    'negative'
                  end
                %>

                <div class="metric-item">
                  <span class="label"><%= config[:label] %></span>
                  <span class="value">
                    <%= value %><%= config[:is_percent] ? '%' : '' %>
                    <% if delta_raw %>
                      <span class="delta <%= delta_class %>">
                        <%= is_improvement ? '▲' : is_improvement == false ? '▼' : '—' %>
                        <%= delta_raw.abs %><%= config[:is_percent] ? '%' : '' %>
                      </span>
                    <% end %>
                  </span>
                </div>
              <% end %>
            </div>

            <!-- Other Observations (Conditional) -->
            <% if @last_session_insight[:secondary_observations]&.any? %>
              <div class="other-observations">
                <h4>Other Observations</h4>
                <ul>
                  <% @last_session_insight[:secondary_observations].each do |obs| %>
                    <li><%= obs[:actionable_steps]&.first || obs[:reason] %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <%= link_to session_path(@last_session_insight[:session]), class: "view-link" do %>
              <%= icon_svg(:arrow_right, css_class: 'icon-xs') %> View Full Report
            <% end %>
          </div>
        <% end %>

        <!-- Weekly Goal (60% width) -->
        <div class="weekly-goal-card">
          <div class="card-header-compact">
            <%= icon_svg(:target, css_class: 'header-icon') %>
            <div>
              <h3>This Week's Goal</h3>
              <span class="time-estimate">6–8 min/day</span>
            </div>
          </div>

          <% if @priority_recommendations&.dig(:focus_this_week)&.first %>
            <% focus_area = @priority_recommendations[:focus_this_week].first %>

            <h2 class="goal-title"><%= humanize_improvement_type(focus_area[:type]) %></h2>

            <div class="goal-narrative">
              <% if @weekly_focus_tracking %>
                <%= generate_weekly_focus_narrative(focus_area, @weekly_focus_tracking) %>
              <% else %>
                Target <%= format_metric_value(focus_area[:target_value], focus_area[:type]) %> by Sunday.
                Average last 5 sessions: <%= format_metric_value(focus_area[:current_value], focus_area[:type]) %>.
              <% end %>
            </div>

            <div class="goal-progress">
              <div class="progress-stat">
                <span class="stat-value"><%= @weekly_focus_tracking ? @weekly_focus_tracking[:sessions_today] : 0 %> / <%= @weekly_focus_tracking ? @weekly_focus_tracking[:target_today] : 2 %></span>
                <span class="stat-label">Today</span>
              </div>
              <div class="progress-stat">
                <span class="stat-value"><%= @weekly_focus_tracking ? @weekly_focus_tracking[:sessions_this_week] : 0 %> / <%= @weekly_focus_tracking ? @weekly_focus_tracking[:target_this_week] : 10 %></span>
                <span class="stat-label">Week</span>
              </div>
              <div class="progress-stat">
                <span class="stat-value"><%= @weekly_focus_tracking ? @weekly_focus_tracking[:streak_days] : 0 %></span>
                <span class="stat-label">Streak</span>
              </div>
            </div>

            <div class="why-section">
              <strong>Why this focus?</strong>
              <p><%= focus_area[:actionable_steps]&.first || "Based on your recent sessions, this is your highest-impact area for improvement." %></p>
            </div>
          <% else %>
            <p class="no-goal-text">Complete more sessions to get personalized weekly focus recommendations.</p>
            <%= link_to practice_path, class: "btn-primary" do %>
              <%= icon_svg(:mic, css_class: 'icon-inline') %> Start Practicing
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Row 2: Today's Focus (Full Width, Horizontal Drills) -->
      <div class="todays-focus-section">
        <div class="section-header">
          <%= icon_svg(:list, css_class: 'header-icon') %>
          <h3>Today's Focus</h3>
        </div>

        <% if @daily_plan && @daily_plan[:drills].present? %>
          <div class="drills-row">
            <% @daily_plan[:drills].first(3).each do |drill| %>
              <div class="drill-card">
                <div class="drill-header">
                  <%= icon_svg(:mic, css_class: 'drill-icon') %>
                  <span class="drill-number"><%= drill[:order] %></span>
                </div>
                <h4 class="drill-title"><%= drill[:title] %></h4>
                <p class="drill-desc"><%= drill[:description] %></p>
                <% if drill[:reasoning].present? %>
                  <p class="drill-reason"><%= drill[:reasoning] %></p>
                <% end %>
                <%= link_to practice_path(
                  weekly_focus_id: drill[:weekly_focus_id],
                  is_planned_session: true,
                  drill_title: drill[:title],
                  drill_description: drill[:description],
                  drill_reasoning: drill[:reasoning],
                  target_seconds: drill[:duration_seconds]
                ), class: "btn-drill" do %>
                  <%= icon_svg(:play, css_class: 'icon-xs') %> Start
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="no-drills">
            <p>Record more sessions to get personalized daily drills.</p>
            <%= link_to practice_path, class: "btn-primary" do %>
              <%= icon_svg(:mic, css_class: 'icon-inline') %> Start Session
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Row 3: Calendar + Progress Link (Side by Side) -->
      <div class="dashboard-row-bottom">
        <!-- Practice Calendar (70% width) -->
        <div class="calendar-card">
          <div class="section-header">
            <%= icon_svg(:calendar, css_class: 'header-icon') %>
            <h3>Practice Calendar</h3>
          </div>

          <% if @calendar_data.present? %>
            <div class="calendar-grid">
              <% @calendar_data.each do |day| %>
                <div class="calendar-day <%= day[:has_session] ? 'trained' : 'missed' %>"
                     title="<%= day[:date].strftime('%b %d, %Y') %>">
                </div>
              <% end %>
            </div>

            <div class="calendar-legend">
              <div class="legend-item">
                <div class="legend-dot missed"></div>
                <span>Missed</span>
              </div>
              <div class="legend-item">
                <div class="legend-dot trained"></div>
                <span>Practiced</span>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Progress Link (30% width) -->
        <div class="progress-link-card">
          <%= link_to progress_path, class: "progress-cta" do %>
            <%= icon_svg(:trending_up, css_class: 'cta-icon') %>
            <div class="cta-text">
              <h4>View Progress</h4>
              <p>Track all metrics</p>
            </div>
            <%= icon_svg(:arrow_right, css_class: 'cta-arrow') %>
          <% end %>
        </div>
      </div>

    </div>
  <% else %>
    <div class="no-sessions-state">
      <%= icon_svg(:mic, css_class: 'empty-icon') %>
      <h3>No Sessions Yet</h3>
      <p>Complete a few practice sessions to get your personalized coaching plan!</p>
      <%= link_to practice_path, class: "btn-primary-large" do %>
        <%= icon_svg(:mic, css_class: 'icon-inline') %> Start Practicing
      <% end %>
    </div>
  <% end %>
</div>

